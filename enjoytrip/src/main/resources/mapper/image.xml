<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.enjoytrip.image.model.mapper.ImageMapper">

	<resultMap id="imageResultMap" type="image">
		<result column="image_id" property="imageId" />
		<result column="type" property="type" />
		<result column="data_id" property="dataId" />
		<result column="thumbnail" property="thumbnail" />
		<result column="save_folder" property="saveFolder" />
		<result column="original_file" property="originalFile" />
		<result column="save_file" property="saveFile" />
	</resultMap>

	<insert id="registerFile" parameterType="object">
		insert into file_info (type, data_id, thumbnail, save_folder, original_file, save_file)
		values
		<foreach collection="images" item="image" separator=" , ">
			(#{image.type}, #{image.dataId}, #{image.thumbnail}, #{image.saveFolder}, #{image.originalFile}, #{image.saveFile})
		</foreach>
	</insert>
	
	<select id="fileInfoList" resultMap="file">
		select save_folder, original_file, save_file
		from file_info
		where article_no = #{articleNo}
	</select>
	
	<delete id="deleteFile" parameterType="int">
		delete from file_info
		where article_no = #{articleNo}
	</delete>

</mapper>