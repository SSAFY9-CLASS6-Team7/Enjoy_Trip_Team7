<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.enjoytrip.board.model.mapper.BoardMapper">

    <!-- 게시글 전체 조회 -->
    <select id="selectBoard" resultType="Board">
        SELECT *
          FROM board
    </select>

    <!-- 게시글 등록 -->
    <!-- 관광지 선택 여부에 따른 분기 필요 -->
    <!-- 사진 등록 추가 필요 -->
    <insert id="createBoard" parameterType="Board">
        INSERT INTO board (code, title, createtime, board_content, user_id, annonymous)
        VALUES (#{code}, #{title}, now(), #{boardContent}, #{userId}, #{anonymous})
    </insert>

</mapper>