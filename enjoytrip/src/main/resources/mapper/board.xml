<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.enjoytrip.board.model.mapper.BoardMapper">

    <resultMap type="board" id="boardMap">
        <result column="code" property="code"/>
        <result column="title" property="title"/>
        <result column="createtime" property="createTime"/>
        <result column="board_content" property="boardContent"/>
        <result column="heart" property="heart"/>
        <result column="hits" property="hits"/>
        <result column="anonymous" property="anonymous"/>
        <result column="board_id" property="boardId"/>
        <result column="user_id" property="userId"/>
        <result column="attraction_id" property="attractionId"/>
    </resultMap>

    <!-- 게시글 전체 조회 -->
    <select id="selectBoard" resultMap="boardMap" parameterType="hashMap">
        SELECT *
          FROM board
        <where>
            <choose>
                <when test="code != ''">AND code = ${code}</when>
                <when test="anonymous != ''">AND anonymous = #{anonymous}</when>
            </choose>
        </where>

        <trim prefix="ORDER BY" suffix="DESC">
            <if test="condition == 'heart'">`heart`</if>
            <if test="condition == 'hits'">`hits` </if>
            <if test="condition == ''"> 'createtime' </if>
        </trim>
    </select>

    <!-- 게시글 상세 내용 조회 -->
    <select id="selectBoardByBoardId" parameterType="int" resultMap="boardMap">
        SELECT *
          FROM board
         WHERE board_id = #{boardId}
    </select>

    <!-- 게시글 등록 -->
    <!-- TODO 사진 등록 -->
    <insert id="insertBoard" parameterType="Board">
        <if test="attractionId == 0">
            INSERT INTO board (code, title, createtime, board_content, user_id, anonymous, heart)
            VALUES (#{code}, #{title}, now(), #{boardContent}, #{userId}, #{anonymous}, #{heart})
        </if>
        <if test="attractionId != 0">
            INSERT INTO board (code, title, createtime, board_content, user_id, anonymous, attraction_id, heart)
            VALUES (#{code}, #{title}, now(), #{boardContent}, #{userId}, #{anonymous}, #{attractionId}, #{heart})
        </if>
    </insert>

    <!-- 게시글 수정 -->
    <update id="updateBoard" parameterType="Board">
        UPDATE board
        SET title = #{title}, code = #{code}, attraction_id = #{attractionId},
            board_content = #{boardContent}, createtime = now()
        WHERE board_id = #{boardId}
    </update>

    <!-- 게시글 삭제 -->
    <delete id="deleteBoard" parameterType="int">
        DELETE
          FROM board
         WHERE board_id = #{boardId}
    </delete>

</mapper>